@model List<Project.Web.ViewModels.UserRoleViewModel>

@{
	ViewData["Title"] = "EditUsersInRole";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
	var roleId = ViewBag.roleId;
}




<h1>EditUserInRole</h1>

<form class="" method="post">
	<div class="card">
		<div class="card-header">Add or Remove User from this role</div>
		<div class="card-body">
			@for(int i = 0; i < Model.Count;i++)
			{
			<div class="form-check m-1">
				<input asp-for="@Model[i].IsSelected" class="form-check-input" />
				<label asp-for="@Model[i].IsSelected" class="form-check-label">@Model[i].UserName</label>
				<input hidden asp-for="@Model[i].UserId" class="form-check-input" />
				<input hidden asp-for="@Model[i].UserName" class="form-check-input" />
			</div>
			}
		</div>

		
		<div class="card-footer">
			<input type="submit" value="Update" class="btn btn-primary" style="width:auto;"  />
			<a asp-action="EditRole" asp-route-id="@roleId" class="btn btn-primary" style="width:auto;">Cancel</a>
		</div>
	</div>
</form>