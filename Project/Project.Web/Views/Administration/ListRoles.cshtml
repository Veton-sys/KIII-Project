@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole<string>>


@{
	ViewData["Title"] = "ListRoles";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Roles</h1>

@if (Model.Any())
{

	foreach (var role in Model)
	{
		<div class="card">
			<div class="card-header">
				Role Id: @role.Id
			</div>
			<div class="card-body">
				<div class="card-title">@role.Name</div>
			</div>
			<div class="card-footer">
				<a class="btn btn-primary" asp-controller="Administration" asp-action="EditRole" asp-route-id="@role.Id">Edit</a>
				<a class="btn btn-danger">Delete</a>
			</div>
		</div>
	}
}
else
{
	<div class="card">
		<div class="card-header">
			No roles were found

		</div>
		<div class="card-body">
			<h5 class="card-title">
				Use the button to create a role
			</h5>
		</div>

	</div>
}
<a class="btn btn-primary mt-5" style="width:auto;" asp-controller="Administration" asp-action="CreateRole">Create role</a>
