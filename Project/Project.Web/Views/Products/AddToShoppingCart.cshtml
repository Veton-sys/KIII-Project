@model Project.Domain.DTO.AddToShoppingCartDTO

@{
    ViewData["Title"] = "AddToShoppingCart";
}

<h2>Add selected product to shopping cart</h2>
<div class="row">
    <div class="col-md-3">
        <form asp-action="AddToShoppingCart">
            <input type="hidden" asp-for="ProductId" />
            <div class="form-group">
                <input class="form-control" disabled asp-for="SelectedProduct.ProductName" />
            </div>
            <div class="form-group">
                <input class="form-control" asp-for="Quantity" type="number" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>